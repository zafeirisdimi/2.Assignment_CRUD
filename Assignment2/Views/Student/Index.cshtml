@model IEnumerable<Assignment2.Models.Student>
<div class="popover-header">
    <h1>Our Available Students</h1>
</div>
<br />
<div>
    <a href="/Student/Create" class="btn btn-success" target="_blank" title="Add new student in your list">Create new Student</a>
</div>
<br />
<table class="table table-striped table-dark table-responsive-lg">
    <tr>
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Photo</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Phone</th>
            <th>Salary</th>
            <th>Email</th>
            <th>Registration(y/m/d)</th>
            <th>Trainers</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td><img src="@student.PhotoUrl" width="30" alt="@student.FirstName+''+@student.LastName" /></td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Phone</td>
                <td>@student.Salary</td>
                <td>@student.Email</td>
                <td>@student.HireDate.ToString("yyyy/m/d")</td>
                <td>
                    <ul class="small">
                        @foreach (var trainer in student.Trainers)
                        {
                            <li> @trainer.FirstName @trainer.LastName</li>
                        }
                    </ul>
                </td>

                <td>
                    <div class="btn-group">
                        <div class="p-sm-1">
                            <a href="/student/Details?id=@student.Id" class="btn btn-outline-info btn-sm">Details</a>
                        </div>
                        <div class="p-sm-1">
                            <a href="/student/Edit?id=@student.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                        </div>
                        <div class="p-sm-1">
                            <a href="/student/Delete?id=@student.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
<div class="blockquote-footer bg-light">
    <p>Total rows: @ViewBag.TotalStudents</p>
</div>
<div>
    @Html.ActionLink("Go back", "Index", "Home", null, new { @class = "btn btn-sm btn-secondary" })
</div>
